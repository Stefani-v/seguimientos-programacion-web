@model YellowRecipes.Models.Recipe

@{
    ViewData["Title"] = Model.Title;
}

<style>
    body {
        background-color: #FFF9E3;
    }

    .bg-yellow {
        background-color: #FFD93D;
    }

    .btn-yellow {
        background-color: #FFD93D;
        border: none;
    }

        .btn-yellow:hover {
            background-color: #F4C430;
        }
</style>

<div class="bg-yellow py-4 mb-4">
    <div class="container">
        <h1 class="text-center">@Model.Title</h1>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-warning">
                <div class="card-header bg-yellow">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">@Model.Title</h4>
                        <span class="badge bg-warning text-dark fs-6">@Model.Category</span>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="mb-4">
                        <h5>Ingredientes</h5>
                        <p class="ms-3">@Model.Ingredients</p>
                    </div>

                    <div class="mb-4">
                        <h5>Preparación</h5>
                        <p class="ms-3">@Model.Description</p>
                    </div>
                </div>
                <div class="card-footer bg-white">
                    <a asp-action="Index" class="btn btn-yellow">← Volver a Recetas</a>
                </div>
            </div>
        </div>
    </div>
</div>
