@model Expenses.Models.ExpenseView

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">

    <h2 class="text-center mb-4">Expense Manager</h2>

    <div class="row">
        <!-- Form -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    Add New Expense
                </div>
                <div class="card-body">
                    <form asp-action="Add" method="post">
                        <div class="mb-3">
                            <label>Description</label>
                            <input asp-for="NewExpense.Description" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label>Amount ($)</label>
                            <input asp-for="NewExpense.Amount" type="number" step="0.01" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label>Category</label>
                            <select asp-for="NewExpense.Category" class="form-select">
                                <option>Food</option>
                                <option>Transport</option>
                                <option>Entertainment</option>
                                <option>Health</option>
                                <option>Shopping</option>
                                <option>Other</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label>Date</label>
                            <input asp-for="NewExpense.Date" type="date" class="form-control" required />
                        </div>

                        <button class="btn btn-primary w-100">Add Expense</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- List -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    Monthly Summary
                </div>
                <div class="card-body">
                    <h4>
                        Total this month:
                        <span class="text-success">$@Model.TotalMonthly</span>
                    </h4>

                    <hr />

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th>Amount</th>
                                <th>Category</th>
                                <th>Date</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var exp in Model.Expenses)
                            {
                                <tr>
                                    <td>@exp.Description</td>
                                    <td>$@exp.Amount</td>
                                    <td>@exp.Category</td>
                                    <td>@exp.Date.ToShortDateString()</td>
                                    <td>
                                        <a asp-action="Delete" asp-route-id="@exp.Id"
                                           class="btn btn-sm btn-danger">
                                            Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

</div>

