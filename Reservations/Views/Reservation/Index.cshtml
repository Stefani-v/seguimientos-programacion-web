@model Reservations.Models.ReservationView

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">

    <h2 class="text-center mb-4">Online Reservation System</h2>

    <div class="row">
        <!-- Reservation Form -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    Make a Reservation
                </div>
                <div class="card-body">

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            Este horario ya está reservado. Por favor elija otro.
                        </div>
                    }

                    <form asp-action="Reserve" method="post">
                        <div class="mb-3">
                            <label>Customer Name</label>
                            <input asp-for="NewReservation.CustomerName" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label>Date</label>
                            <input asp-for="NewReservation.Date" type="date" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label>Time Slot</label>
                            <select asp-for="NewReservation.TimeSlot" class="form-select">
                                @foreach (var slot in Model.TimeSlots)
                                {
                                    <option>@slot</option>
                                }
                            </select>
                        </div>

                        <button class="btn btn-primary w-100">Reserve</button>
                    </form>

                </div>
            </div>
        </div>

        <!-- Booking List -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    Scheduled Reservations
                </div>

                <div class="card-body">

                    @if (Model.Reservations.Count == 0)
                    {
                        <p class="text-muted">No reservations yet.</p>
                    }
                    else
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Date</th>
                                    <th>Time</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var b in Model.Reservations)
                                {
                                    <tr>
                                        <td>@b.CustomerName</td>
                                        <td>@b.Date.ToShortDateString()</td>
                                        <td>@b.TimeSlot</td>
                                        <td>
                                            <a asp-action="Delete" asp-route-id="@b.Id" class="btn btn-sm btn-danger">
                                                Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }

                </div>
            </div>
        </div>
    </div>

</div>
