@model List<Reservations.Models.Service>
@{
    ViewData["Title"] = "Servicios Disponibles";
    Layout = "_Layout";
}

<div class="text-center mb-5">
    <h1 class="display-4 fw-bold text-primary">📅 Sistema de Reservas</h1>
    <p class="text-muted">Selecciona un servicio para agendar tu cita</p>
    <a asp-action="MyReservations" class="btn btn-outline-primary">📋 Mis Reservas</a>
</div>

<div class="row g-4">
    @foreach (var service in Model)
    {
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 shadow-sm hover-card">
                <div class="card-body text-center">
                    <div class="service-icon">@service.Icon</div>
                    <h5 class="card-title fw-bold">@service.Name</h5>
                    <p class="text-muted mb-2">⏱️ @service.Duration min</p>
                    <p class="text-success fw-bold fs-5">$@service.Price.ToString("N0")</p>
                    <a asp-action="Book" asp-route-id="@service.Id" class="btn btn-primary w-100">
                        Reservar Ahora
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .service-icon {
        font-size: 4rem;
        margin: 20px 0;
    }

    .hover-card {
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .hover-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.2) !important;
        }
</style>