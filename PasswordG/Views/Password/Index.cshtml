@model PasswordG.Models.PasswordOptions

<div class="container mt-5">
    <h2>Generador de Contraseñas</h2>

    <form asp-action="Generate" method="post" class="mt-4">

        <div class="form-group mb-3">
            <label>Password Length</label>
            <input asp-for="Length" type="number" min="4" max="50" class="form-control" />
        </div>

        <div class="form-check">
            <input asp-for="IncludeLowercase" class="form-check-input" type="checkbox" />
            <label class="form-check-label">Include Lowercase Letters</label>
        </div>

        <div class="form-check">
            <input asp-for="IncludeUppercase" class="form-check-input" type="checkbox" />
            <label class="form-check-label">Include Uppercase Letters</label>
        </div>

        <div class="form-check">
            <input asp-for="IncludeNumbers" class="form-check-input" type="checkbox" />
            <label class="form-check-label">Include Numbers</label>
        </div>

        <div class="form-check">
            <input asp-for="IncludeSymbols" class="form-check-input" type="checkbox" />
            <label class="form-check-label">Include Symbols</label>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Generate Password</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.GeneratedPassword))
    {
        <div class="alert alert-success mt-4">
            <strong>Your Password:</strong>
            <p style="font-size: 1.5rem; font-family: monospace;">
                @Model.GeneratedPassword
            </p>
        </div>
    }