<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Encuestas</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-br from-purple-50 to-pink-50 min-h-screen">
    <header class="bg-purple-600 text-white shadow-lg">
        <div class="container mx-auto px-4 py-4">
            <nav class="flex justify-between items-center">
                <a asp-controller="Survey" asp-action="Index" class="text-2xl font-bold">
                    📊 Encuestas App
                </a>
                <div class="space-x-4">
                    <a asp-controller="Survey" asp-action="Index" class="hover:text-purple-200">Inicio</a>
                    <a asp-controller="Survey" asp-action="Create" class="hover:text-purple-200">Crear Encuesta</a>
                </div>
            </nav>
        </div>
    </header>

    <main class="container mx-auto px-4 py-8">
        @RenderBody()
    </main>

    <footer class="bg-purple-600 text-white text-center py-4 mt-12">
        <p>&copy; 2025 Encuestas App - Hecho con ❤️</p>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>