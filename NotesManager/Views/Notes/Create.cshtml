@model NotesManager.Models.Note

<h2 class="mb-3">Create Note</h2>

<form asp-action="Create" method="post" class="card p-4 shadow-sm">
    <div class="mb-3">
        <label>Title</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Category</label>
        <input asp-for="Category" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Content</label>
        <textarea asp-for="Content" rows="5" class="form-control"></textarea>
    </div>

    <button class="btn btn-dark-custom">Save</button>
</form>
